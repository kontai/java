<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tai.mapper.LogDemo">
    <select id="selAll" resultType="log">
        select * from log
        <where>
            <if test="accIn!='' and accIn!=null">
                and accin=#{accIn}
            </if>
            <if test="accOut!='' and accOut!=null">
                and accout=#{accOut}
            </if>
        </where>
    </select>

    <select id="selChoose" resultType="log">
        <bind name="accOut" value="'%'+accOut+'%'"/>
        select * from log
        <where>
            <choose>
                <when test="accIn!=null and accIn!=''">
                    and accin=#{accIn}
                </when>
                <when test="accOut!=null and accOut!=''">
                    and accout=#{accOut}
                </when>
            </choose>

        </where>
    </select>

    <sql id=""
</mapper>